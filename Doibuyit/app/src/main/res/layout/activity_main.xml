<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.obiaf.doibuyit.MainActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/overviewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "Your Money"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="40sp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/overviewBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/moneyGreen"
                android:text="10,056 $"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/overviewMonthBudget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="monthly budget: 1000$"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:gravity="center" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:id="@+id/weeklyProgress"
                android:layout_height="20dp"
                android:layout_width="300dp"
                app:rcBackgroundPadding="3dp"
                app:rcRadius="30dp"
                />

            <TextView
                android:id="@+id/amountLeftWk"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100$ left for this week"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/monthlyProgressText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="60%"
                        android:textSize="35sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="47dp"/>


                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/monthlyProgress"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        app:cpb_background_progressbar_color="#d1cfcf"
                        app:cpb_background_progressbar_width="5dp"
                        app:cpb_progressbar_color="@color/moneyGreen"
                        app:cpb_progressbar_width="10dp" />
                </FrameLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:text="of monthly\nbudget spent"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="6dp">
        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="vertical">-->
            <!--<Button-->
                <!--android:id="@+id/add_expense2"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:transitionName="profile"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textAlignment="center"-->
                <!--android:layout_marginBottom="5dp"-->
                <!--android:text="Add Expense :("-->
                <!--android:textColor="@android:color/holo_red_dark"-->
                <!--android:textSize="25dp" />-->


        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/clickme"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Click me"
                android:textAlignment="center"
                android:layout_gravity="center"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
