<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="So you want to know if you should
buy it or not.Buy what? Doesn't matter,
we'll help you save up, and make it rain
when it's time to do so"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textColor="@android:color/transparent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="What's the most you want
   to spend in a month?"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/month_budget"
            android:layout_width="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:inputType="phone"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="#12cee2"
            android:textSize="25dp"
            android:textAlignment="center">

        </android.support.design.widget.TextInputEditText>
    </android.support.design.widget.TextInputLayout>
    <ImageButton
        android:id="@+id/next_btn1"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:src="@drawable/nextbtn1"
        android:background="@android:color/transparent"/>


</LinearLayout>